{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "lib": ["ES2020"],
    "types": ["node", "electron"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": true
  },
  "include": ["main.ts", "preload.ts", "types.ts"]
}
